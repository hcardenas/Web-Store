{{>adminNavbar}}

<br>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-5">
  
      <br>
      <ul class="list-group">
        <li class="list-group-item active text-center">Existing Categories<p class="card-text"></p></li>
        {{#each products}}
        <li class="list-group-item"><p class="card-text">{{this.name}} - {{this.Category.name}}</p></li>
        {{/each}}
      </ul>
      <br> 
        

      
      <br>
      <br>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 ">
      <p class="text-center text-primary lead"> 
        {{#if success}}
          <br>
          {{this.success}}
          <br>
        {{/if}}
      </p>
      <form method="POST" action="/admin/add-product">
        <div class="form-group">
          <label for="productName">New Product Name:</label>
          <input type="text" class="form-control" id="productName" name="name">
        </div>
        <div class="form-group">
          <label for="price">New Product Price:</label>
          <input type="text" class="form-control" id="price" name="price">
        </div>
        <div class="form-group">
          <label for="imgSrc">New Product Image Src:</label>
          <input type="text" class="form-control" id="imgSrc" name="imgSrc">
        </div>
        <div class="form-group">
          <label for="description">New Product description:</label>
          <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group">
          <label for="categories">Product Category</label>
          <select class="form-control" id="categories" name="CategoryId">
            {{#each categories}}
            <option value={{this.id}}>
              {{this.name}}
            </option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>