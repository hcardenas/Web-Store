<div class="container">
	<div class="row justify-content-center">
		<div class=" col-md-6">
			<form method="POST" action="/login">
				<br>
		        <h2 class="form-signin-heading">{{title}}</h2>
				
				{{#if errors}}
					{{#each errors}}
						<div class="alert alert-danger" role="alert">
							 {{this.msg}}
						</div>
					{{/each}}
				{{/if}}


		        <div class="form-group">
			        <label for="username" >Username</label>
			        <input type="text" name="username" id="username" class="form-control" placeholder="Username" required autofocus>
				</div>
				<div class="form-group">
		        	<label for="email" >Email address</label>
		        	<input type="email" name="email" id="email" class="form-control" placeholder="Email address" required autofocus>
		    	</div>
		    	<div class="form-group">
		        	<label for="password" >Password</label>        
		        	<input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
		        	<small id="passwordHelpBlock" class="form-text text-muted">
	  				Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
					</small>
				</div>
				<div class="form-group">
		        	<label for="matchPassword" >Re-Enter Password</label>
		        	<input type="password" name="matchPassword" id="matchPassword" class="form-control" placeholder="Password" required>
		        	
		        </div>
		        <div class="form-group">
		        	<button class="btn btn-lg btn-primary btn-block" type="submit" id="submitLogin">Sign in</button>
		        </div>
			</form>
		</div>
	</div>
</div>

