{{>adminNavbar}}

<br>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-5">
  
      <br>
      <ul class="list-group">
        <li class="list-group-item active text-center">Existing Categories<p class="card-text"></p></li>
        {{#each categories}}
        <li class="list-group-item"><p class="card-text">{{this.name}}</p></li>
        {{/each}}
      </ul>
      <br> 
        

      
      <br>
      <br>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 ">
      <p class="text-center text-primary lead"> 
        {{#if success}}
          <br>
          {{this.success}}
          <br>
        {{/if}}
      </p>
      <form method="POST" action="/admin/add-category">
        <div class="form-group">
          <label for="name">New Category:</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>