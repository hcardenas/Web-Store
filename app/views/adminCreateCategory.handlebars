{{>adminNavbar}}

<br>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-12">
  
      <br>
      <ul class="list-group">
        <li class="list-group-item active text-center">Existing Categories<p class="card-text"></p></li>
        {{#each categories}}
        <li class="list-group-item"><p class="card-text">{{this.categories}}</p></li>
        {{/each}}
      </ul>
      <br> 
        

      
      <br>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{#if success}}
        {{this.success}}
      {{/if}}
      <form method="POST" action="/admin/add-category">
        <div class="form-group">
          <label for="categories">New Category:</label>
          <input type="text" class="form-control" id="categories" name="categories">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>